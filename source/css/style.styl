@import "_variables"
@import "icon.styl"
@import "_partial/sidebar"
@import "_partial/archive"
@import "_partial/article"
@import "_partial/highlight"
@import "_partial/bread-crumb"
@import "_partial/article-index"
@import "_partial/post/tag"

body
  background: color-background
  font: font-size font-sans
  margin: 0

#content
  margin: 0 0 0 360px
  position: absolute
  height: 100%
  right:0
  left: 0
  overflow: scroll

.homepage
  background: #75A7D7;
  height: 100%
  color: white;
  font-family: cursive;
  box-shadow: 0 0 50px #eee inset;

.home-title h1
  margin: 0
  padding: 62px 0 42px 119px;
  font-size: 5rem;
  font-weight: normal
  color: whitesmoke

.home-title h1:hover
  font-weight: bolder

.home-title span
  padding: 3px;
  font-size: 3.2rem;
  transition: all 0.5s ease;
  border-bottom: 2px dashed
  display: inline-block;

.home-title span:hover
  transform: rotate(720deg);
  -webkit-transform: rotate(720deg);
  -ms-transform: rotate(720deg);
  -moz-transform: rotate(720deg);

.black
  color: black

.home-title div
  text-align: center;

@media screen and (max-width: 1000px)
  #content
    margin: 0 0 0 200px
  .home-title span
    font-size :2.1rem
  .home-title h1
    padding: 116px 0 42px 100px;
    font-size: 4rem;

@media screen and (max-width: 1000px) and (min-width:600px) and (max-height:665px)
  #content
    height: 665px
  .homepage .copyright
    top: 635px !important;

@media screen and (min-width: 1000px) and (max-height:773px)
  #content
    height: 773px
@media screen and (max-width: 600px)
  .others #content
    margin: 100px 0 0 0
  .home #content
    display: none

.logo
  background :url(/css/images/logo.png) no-repeat;
  height: 168px;
  background-size: 100px;
  transform: rotate(-248deg);
  -webkit-transform: rotate(-248deg);
  -ms-transform: rotate(-248deg);
  -moz-transform: rotate(-248deg);
  display: inline-block;
  width: 46%;
  text-align: center;
  position: absolute;
  top: 300px;
  right: 43px;
  margin: auto;

.copyright
  text-align: center;
  width: 100%;
  font-family: serif;
  color: rgb(85, 85, 85);
  margin-bottom:20px
  font-weight: bolder

.homepage .copyright
  position: absolute;
  top: 735px;
  color:white

#comments
  padding: 20px;
  margin: 0 -28px 9px;
  background-color: #ddd;
  a
    color: color-link

.hexo-link
  color:  rgb(85, 85, 85);

.homepage .hexo-link
  color: white;
