@import "_variables"
@import "icon.styl"

@import "_partial/sidebar"
@import "_partial/homepage"
@import "_partial/header"
@import "_partial/article-index"

@import "_partial/archive"
@import "_partial/article"
@import "_partial/highlight"
@import "_partial/post/tag"
@import "_partial/tagcloud"

html, body
  background: color-body-background
  font: font-size font-sans
  word-break: break-word
  color: #fff
  margin: 0
  a
    color: #fff

.home #mainContent
  position: absolute
  min-height: 100%
  width: 100%
  box-sizing: border-box

@media mwp-mobile
  .home #mainContent
    display: none
  .others #mainContent
    padding: 100px 30px 0
  .copyright
    font-size: 14px;

@media mwp-tablet
  .home #mainContent
    height: tablet-sidebar-height
  .home #mainContent
    padding: 0 0 0 200px
  .others #mainContent
    padding: 0 table-article-space 0 200px+table-article-space

@media mwp-pc
  .home #mainContent
    height: whole-sidebar-height
    padding: 0 0 0 360px
  .others #mainContent
    padding: 0 pc-article-space 0 360px+pc-article-space
    height: whole-sidebar-height
    box-sizing: border-box;
    position: absolute
    width: 100%;
    min-height: 100%
    overflow: scroll

.copyright
  text-align: center;
  width: 100%;
  font-family: serif;
  margin: 20px auto
  font-weight: bolder