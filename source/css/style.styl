@import "_variables"
@import "icon.styl"
@import "_partial/sidebar"
@import "_partial/archive"
@import "_partial/article"
@import "_partial/highlight"
@import "_partial/bread-crumb"
@import "_partial/article-index"
@import "_partial/post/tag"

body
  background: color-background
  font: font-size font-sans
  margin: 0

#content
  margin: 0 0 0 360px
  position: absolute
  height: 100%
  right:0
  left: 0
  overflow: scroll

.homepage
  background: rgba(80,97,109,0.9);
  height: 100%
  color: white;
  font-family: cursive;
  box-shadow: 0 0 50px #eee inset;

.homepage:after
  content: '';
  background: url("/css/images/background.jpeg") repeat;
  background-size: 100%,100%;
  z-index: -2;
  position: absolute;
  display: block;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  -webkit-animation:section1 45s linear infinite;
  animation:section1 45s linear infinite;
  -moz-animation:section1 45s linear infinite;

@-webkit-keyframes section1
  0%{background-position :0 1000px;}
  100%  {background-position :1000px 0;}

@keyframes section1
  0%{background-position :0 1000px;}
  100%  {background-position :1000px 0;}

.home-title h1
  margin: 0
  padding: 62px 0 42px 119px;
  font-size: 5rem;
  font-weight: normal
  color: #bbcdc5;

.home-title h1:hover
  font-weight: bolder

.home-title span
  color: #e4c6d0;
  padding: 3px;
  font-size: 3.2rem;
  transition: all 0.5s ease;
  border-bottom: 2px dashed
  display: inline-block;

.home-title span:hover
  transform: rotate(720deg);
  -webkit-transform: rotate(720deg);
  -ms-transform: rotate(720deg);
  -moz-transform: rotate(720deg);

.home-title span.black
  color: #f5deb3;

.home-title div
  text-align: center;

@media screen and (max-width: 1000px)
  #content
    margin: 0 0 0 200px
  .home-title span
    font-size :2.1rem
  .home-title h1
    padding: 116px 0 42px 100px;
    font-size: 4rem;

@media screen and (max-width: 1000px) and (min-width:600px) and (max-height:656px)
  #content
    height: 656px
  .homepage .copyright
    bottom:20px !important;

@media screen and (min-width: 1000px) and (max-height:773px)
  #content
    height: 773px
@media screen and (max-width: 600px)
  .others #content
    margin: 100px 0 0 0
  .home #content
    display: none

.logo
  background :url(/css/images/logo.png) no-repeat;
  height: 168px;
  background-size: 100px;
  transform: rotate(-248deg);
  -webkit-transform: rotate(-248deg);
  -ms-transform: rotate(-248deg);
  -moz-transform: rotate(-248deg);
  display: inline-block;
  width: 46%;
  text-align: center;
  position: absolute;
  top: 300px;
  right: 43px;
  margin: auto;

.copyright
  text-align: center;
  width: 100%;
  font-family: serif;
  color: color-font-light;
  margin-bottom:20px
  font-weight: bolder

.homepage .copyright
  position: absolute;
  bottom: 20px;
  color:white

#comments
  padding: 20px;
  margin: 0 -28px 9px;
  background-color: #f5deb3;
  a
    color: color-link

.hexo-link
  color:  color-font-light;

.homepage .hexo-link
  color: white;
