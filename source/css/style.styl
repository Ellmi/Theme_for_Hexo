@import "_variables"
@import "icon.styl"
@import "_partial/sidebar"

body
  background: color-background
  font: font-size font-sans
  margin: 0

@media screen and (min-height: 773px)
  #content
    bottom: 0

@media screen and (max-height: 773px)
  #content
    height: 773px

#content
  margin: 0 0 0 360px
  position: absolute
  top: 0
  left: 0
  right: 0

.homepage
  background: #75A7D7;
  box-shadow: 0px 0px 50px #eee inset;
  height: 100%
  color: white;
  font-family: cursive;

.home-title h1
  margin: 0
  padding: 62px 0 42px 119px;
  font-size: 5rem;
  font-weight: normal
  color:whitesmoke

.home-title h1:hover
  font-weight: bolder

.home-title span
  padding: 3px;
  font-size: 3.2rem;
  transition: all 0.5s ease;
  border-bottom: 2px dashed
  display: inline-block;

.home-title span:hover
  transform: rotate(720deg);
  -webkit-transform: rotate(720deg);
  -ms-transform: rotate(720deg);
  -moz-transform: rotate(720deg);

.black
  color:black

.home-title div
  text-align: center;

@media screen and (max-width: 1000px)
  #content
    margin: 0 0 0 200px
  .home-title span
    font-size :2.1rem
  .home-title h1
    padding: 116px 0 42px 100px;
    font-size: 4rem;

@media screen and (max-width: 600px)
  #content
    margin :100px 0 0 0

.logo
  background :url(/css/images/logo.png) no-repeat;
  height: 168px;
  background-size: 100px;
  transform: rotate(-248deg);
  -webkit-transform: rotate(-248deg);
  -ms-transform: rotate(-248deg);
  -moz-transform: rotate(-248deg);
  display: inline-block;
  width: 46%;
  text-align: center;
  position: absolute;
  top: 300px;
  right: 43px;
  margin: auto;

.copyright
  position: absolute;
  top: 735px;
  text-align: center;
  width: 100%;