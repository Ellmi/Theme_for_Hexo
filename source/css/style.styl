html, body
  background: color-body-background
  font: font-size font-sans
  margin: 0

@media mwp-mobile
  .home #mainContent
    display: none

@media mwp-tablet
  .home #mainContent
    position: absolute
    min-height: 100%
    height: 656px
    width: 100%
    box-sizing: border-box
    padding: 0 0 0 200px
