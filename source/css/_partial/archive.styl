@import "language"

.archives,
.blogContents
  margin: 97px 82px 30px;
  background: #FFFBF5;
  border-left: 4px dashed #0099D5;
  padding: 10px 29px;
  background-image: repeating-linear-gradient(-45deg, #fff, #fff 4px, transparent 4px, transparent 8px)

.blog-index-container
  margin: 97px 82px 30px;

#content nav#type-nav
  background-color: #FFFBF5;
  position: absolute;
  left: 82px;
  right: 82px;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  top: 118px;
  background-image: repeating-linear-gradient(-45deg, #fff, #fff 4px, transparent 4px, transparent 8px);

#content nav li
  display: inline-block;
  width: 25%;
  font-size: 0.9rem;
  font-family: arial;
  text-align: center;
  float: left;
  color: #0099D5;
  padding: 18px 0;
  box-shadow: #ccc 0 4px 1px;

#content nav li:hover
  color: white;
  background: #0099D5;

#content nav li.left:hover
  border-top-left-radius: 8px;

#content nav li.right:hover
  border-top-right-radius: 8px;
@media screen and (max-width: 1000px)
  .archives,
  .blogContents,
  .blog-index-container
    margin: 97px 30px 30px;
  #content nav#type-nav
    left: 30px;
    right: 30px;

.archives li
  border-bottom: 1px dashed #ccc;
  padding: 29px 0 10px 42px;
  color: #777;

li.year
  border-bottom: none;
  color: #555;
  font-size: 20px;
  padding: 42px 0 0;

.archives .article-title
  text-decoration: none;
  font-size: 20px;
  border-bottom: none;