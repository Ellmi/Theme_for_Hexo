.blogContents
  margin: 190px 30px 30px;
  background: #FFFBF5;
  border-left: 4px dashed #0099D5;
  border-right: 4px dashed #0099D5;
  padding: 10px 29px;

#content .title
  font-family: 'Montserrat', serif;
  text-transform: uppercase;
  color: #0099D5;
  font-size: 2.3rem;
  font-weight: bold;
  margin: 30px;
  position: absolute;

#content nav 
  background-color: #FFFBF5;
  position: absolute;
  left: 30px;
  right: 30px;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  top: 109px;
  z-index: 2;

#content nav li 
  display: inline-block;
  width: 25%;
  font-size: 0.9rem;
  font-family: arial;
  text-align: center;
  float: left;
  color: #0099D5;
  padding: 18px 0;

#content nav li:hover
  color: white;
  background: #0099D5;

#content nav li.left:hover
  border-top-left-radius: 8px;

#content nav li.right:hover
  border-top-right-radius: 8px;
