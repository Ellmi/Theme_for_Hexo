@import "language"

.archives,
.blogContents,
.tagcloud
  margin: 0 0 30px
  border-left: 4px dashed #e4c6d0;
  padding: 10px 29px 42px;
  background: rgba(228,198,208,0.1);

#mainContent nav#type-nav
  background-color: #fffbf5;
  height: 52px;
  margin: 0 0 30px
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  background-image: repeating-linear-gradient(-45deg, #fff, #fff 4px, transparent 4px, transparent 8px);

#mainContent nav li
  display: inline-block;
  width: 25%;
  font-size: 0.9rem;
  font-family: arial;
  text-align: center;
  float: left;
  color: #e4c6d0;
  line-height: 52px;
  box-shadow: #e4c6d0 0 4px 1px;

#content nav li:hover
  color: white;
  background: #e4c6d0;

#content nav li.left:hover
  border-top-left-radius: 8px;

#content nav li.right:hover
  border-top-right-radius: 8px;

.archives li
  font-family: fantasy;
  border-bottom: 1px dashed #ccc;
  padding: 29px 0 7px 42px;
  color: white;

li.year
  border-bottom: none;
  color: white;
  font-size: 20px;
  padding: 42px 0 0;

.archives .article-title
  text-decoration: none;
  font-size: 20px;
  border-bottom: none;
  font-family: serif;

.archives li>span
    width: 57px;
    display: inline-block;