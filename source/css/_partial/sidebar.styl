.sidebar
  position: absolute
  background-color: whitesmoke
  width: 360px
  box-shadow: #ccc 0 0 10px
  border-right: 1px solid #ddd
  z-index: 1

.master-portrait
  display: block
  height: 80px
  width: 80px
  border-radius: 50%
  margin: 42px auto 10px
  transition: all 0.5s ease

.master-portrait:hover
  transform: rotate(360deg)
  -webkit-transform: rotate(360deg)

.master-name
  border-bottom: 1px dashed #ddd;
  height: 60px;
  width: 128px;
  margin: 28px auto;
  background-image: url(master-name-url);
  background-size: 128px 60px;

@media screen and (max-width: 600px) and (min-height:773px), screen and (min-width: 1000px) and (min-height:773px), screen and (max-width: 1000px) and (min-width:600px) and (min-height:665px)
  .sidebar
    height:100%

@media screen and (max-width: 1000px) and (min-width:600px)
  .sidebar
    width: 200px
  .guider
    margin: 55px 0 117px;
  .hi
    display :none

@media screen and (max-width: 600px)
  .home .sidebar
    width:100%
  .others .hi,
  .others .guider,
  .others .link
    display: none
  .others .sidebar
    height : 100px
    width: 100%
  .others .master-portrait
    height: 50px;
    width: 50px;
    margin: 25px;
    float: left;
  .others .master-name
    margin: 20px auto;
  .others .icon-menu:before
    display :block
    float right
    font-size: 36px;
    color: #555;
    margin: 32px 15px;
  .others .guider.guiderToShow
    display:inline-block

.hi
  margin: 50px 50px 19px 50px;
  font-family: 'Droid Serif', serif;
  color: #3A4145;
  font-size: 0.9rem;
  line-height: 1.4rem;
  border-bottom: 1px dashed #ddd;
  height: 150px;

.hi .dropcap
  font-size: 1.9rem;
  padding-right: 8px;

.detail
  color: #555;
  transition: 0.5s all ease;

.icon-play3:before
  color: #aaa;
  position: relative;
  top: 20px;
  font-size: 1.2rem;

.occupation
  color: #fffbf5;
  display: block;
  background-color: #aaa;
  border-radius: 5px;
  font-size: 1rem;
  text-align: center;
  line-height: 30px;
  font-weight: bold;
  padding: 10px 5px;
  position: relative;
  top: 10px;

.morphext > span
  display: none;

.morphext > .animated
  display: inline-block;

a.icon-link
  text-decoration: none;
  display: block;
  text-align: center;
  padding: 6px 0;
  font-size: 0.7rem;
  color: #666;

.link
  margin: 60px 0 30px;

.guider span
  border-bottom: 1px dashed #ccc;
  height: 50px;
  text-align: center;
  width: 139px;
  line-height: 50px;
  font-family: fantasy;
  display: block;
  margin: auto;
  color: rgb(153, 153, 153);
  overflow :hidden
  position: relative;

.guider span:before
  content: '';
  width: 100%
  height :60px
  background: rgba(75, 75, 75, 0.3)
  -moz-backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -moz-transition: all 0.2s linear;
  -o-transition: all 0.2s linear;
  -webkit-transition: all 0.2s linear;
  transition: all 0.2s linear;
  position: absolute;
  top: -120%;
  left: 0

.guider span:hover:before
  top: 0;

a.main-nav-link
  text-decoration: none;