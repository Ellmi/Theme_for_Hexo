.bread-crumb
  color: color-main-theme-color
  border-right: 9px double color-main-theme-color
  border-left: 9px double color-main-theme-color
  box-shadow: color-main-theme-color 0 0 10px
  display: inline-block
  padding: 7px 9px
  background-color: #f5f5f5
  white-space: nowrap
  overflow-x: scroll
  max-width: 85%

.bread-crumb a
  text-decoration: none
  color: color-main-theme-color
  margin: 0 5px

.bread-crumb:before
  content: ""
  position: absolute
  border-top: 3px solid color-main-theme-color
  width: 82px
  left: 0
  top: 168px

@media screen and (max-width: 1000px)
  .bread-crumb:before
    width: 30px

@media screen and (min-width: 600px)
  .bread-crumb:before
    left: 200px
    top: 68px