@import "../icon.styl"

.profile
  position: fixed
  background-color: whitesmoke
  bottom: 0
  top: 0
  left: 0
  width: 360px
  box-shadow: #ccc 0 0 10px
  border-right: 1px solid #ddd

.master-portrait
  display: block
  height: 80px
  width: 80px
  border-radius: 50%
  margin: 30px 140px
  transition: all 0.5s ease

.master-portrait:hover
  transform: rotate(360deg)
  -webkit-transform: rotate(360deg)

.master-name
  border-bottom: 1px dashed #ddd;
  height: 60px;
  width: 128px;
  margin: 20px auto;
  background-image: url(master-name-url);
  background-size: 128px 60px;

@media screen and (max-width: 600px)
  .profile
    width: 100%
    height 100px

  .master-portrait
    height: 50px
    width: 50px
    margin: 25px
    float: left
  .hi
    display:none

.hi
  margin: 60px 50px 30px 50px;
  font-family: 'Droid Serif', serif;
  color: #3A4145;
  font-size: 0.9rem;
  line-height: 1.4rem;
  border-bottom: 1px dashed #ddd;
  height: 170px;

.hi .dropcap
  float: left;
  font-size: 2.2rem;
  line-height: 2.8rem;
  padding-right: 8px;

.detail
  text-align: center;
  color: #555;
  position: relative;
  transition: 0.5s all ease;
  overflow-x: hidden;

.icon-play3:before
  color: #aaa;
  position: relative;
  top: 20px;
  font-size: 1.2rem;

.occupation
  color: #fffbf5;
  display: block;
  background-color: #aaa;
  border-radius: 5px;
  font-size: 1rem;
  text-align: center;
  line-height: 30px;
  font-weight: bold;
  padding: 10px 5px;
  position: relative;
  top: 10px;

.morphext > span
  display: none;

.morphext > .animated
  display: inline-block;
  font-family: 'Droid Serif', serif;

