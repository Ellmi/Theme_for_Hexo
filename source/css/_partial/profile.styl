.master-portrait
  background: url(master-portrait-url)
  display: block
  height: 80px
  width: 80px
  background-size: 80px 80px
  border-radius: 50%
  transition: all 0.5s ease

.master-portrait:hover
  transform:rotate(360deg)

.master-name
  background: url(master-name-url)
  display: block
  width: 172px
  height: 60px

.profile
  position: fixed
  background-color: whitesmoke
  bottom: 0
  top: 0
  left: 0
  width: 360px
  box-shadow: #ccc 0 0 10px
  border-right: 1px solid #ddd
