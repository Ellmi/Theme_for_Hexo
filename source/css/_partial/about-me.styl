.resume div
  color: #50616d
  background: #e4c6d0
  box-shadow: 0 0 50px #eee inset
  border-radius: 10px
  padding: 6px 27px
  font-size: 1.1rem

.remark .friend-portrait
  display: block;
  height: 80px;
  width: 80px;
  border-radius: 50%;
  margin-left: 12%;

.remark .friend-remark
  color: #fffbf5;
  display: block;
  background-color: #aaa;
  border-radius: 5px;
  font-size: 1rem;
  text-align: center;
  font-weight: bold;
  padding: 10px 5px;
  position: relative;
  top: 10px;