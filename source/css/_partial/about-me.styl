.resume div
  font-size: 1.1rem
  font-family: fantasy
  border-bottom: 1px dashed #ccc
  padding: 25px 0 17px 19px
  color: #e4c6d0

.remark .friend-portrait
  display: block
  height: 80px
  width: 80px
  border-radius: 50%
  margin-left: 32px

.remark .friend-remark
  color: #50616d
  display: block
  background-color: #e4c6d0
  box-shadow: 0 0 50px #eee inset
  border-radius: 5px
  font-size: 1rem
  text-align: center
  font-weight: bold
  padding: 10px 24px
  position: relative
  top: -8px
  
.resume
  margin: 42px 0
  background: rgba(0,0,0,0.1)
  padding: 13px 42px 42px
  border-left: 4px dashed #e4c6d0  

.unslider
  background: rgba(0,0,0,0.1)
  margin: 42px 0
  margin-top: 100px
  padding: 11px 21px 31px
  border-left: 4px dashed #e4c6d0

.remark .icon-play3:before
  font-size: 1.8rem
  left: 59px
  top: 0
  color: #eee

.resume h2.title-bar,
.unslider h2.title-bar
  height: 31px
  border-bottom: 2px solid #ccc
  color: #e4c6d0
  line-height: 31px
  text-align: center
  margin: 0 0 21px
  padding: 25px 0 11px 19px
  font-family: fantasy
