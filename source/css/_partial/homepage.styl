.year
  font-size: 4rem
  position: fixed
  top: 38%
  transform: translateX(-50%)
  z-index: 2

.white-year
  color: #f5f5f5
  margin-right: -8px
.ink-year
  color: #50616d
  margin-left: -8px

@media mwp-pc
  .year-background
    position: absolute
    height: 80px
    width: 90px
    top: 0
    z-index: -1
  .right-year
    left: 50%
    background: #f5f5f5
    border-radius: 0 50% 50% 0
  .left-year
    background: #50616d
    right: 50%
    border-radius: 50% 0 0 50%
