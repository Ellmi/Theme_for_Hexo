.cb-bar
  height: 42px
  line-height: 42px
  background-color: #f5f5f5
  margin-top: 42px
  color:#50616d
  padding: 0 16px
  font-weight: bold
  background-image: repeating-linear-gradient(-45deg, #fff, #fff 4px, transparent 4px, transparent 8px)

.cb-content
  border: 1px solid #f5f5f5
  border-top: none
  padding: 21px 0
  text-align: center

span.to-close-arrow
  float: right
  margin-top: 15px
  border-bottom: solid 9px #a9a9a9
  border-left: solid 9px transparent
  border-right: solid 9px transparent

span.to-open-arrow
  float: right
  margin-top: 15px
  border-top: solid 9px #a9a9a9
  border-left: solid 9px transparent
  border-right: solid 9px transparent

.content-hided
  display: none

span.cb-title
  background: color-main-theme-color
  display: inline-block
  border-radius: 20px
  padding: 0 20px
  color: white

#email input
  font-size: 0.9rem
  width: 45%
  display: inline-block
  border-radius: 4px
  height: 42px
  border: 1px solid #ccc
  outline: none

#email textarea
  width: 90%
  display: inline-block
  border-radius: 4px
  border: 1px solid #ccc
  margin: 9px 0
  outline: none
  font-size: 0.9rem

#email input[type="submit"]
  width: 90%
  display: inline-block
  border-radius: 4px
  border: 1px solid #ccc
  background:color-main-theme-color
  color: white
  font-weight: bold
  font-size: 1rem

#social .cb-content span
  margin: 0 12px

@media mwp-mobile
  #email input
    height: 31px
    width: 90%
    margin: 5px 0
    padding: 5px
  .cb-content
    padding: 9px 0
  #email textarea
    margin: 5px 0
    padding: 5px
