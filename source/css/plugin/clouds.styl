html {
  font-family: sans-serif;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
}
body {
  margin: 0;
  background: #aedfe5 url("images/cloud/sky-background.png") 0 0 repeat-x;
}
img {
  max-width: 100%;
  height: auto;
}
.stage {
  top: -100px;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: hidden;
  z-index: 100;
}
.far-clouds {
  background: transparent url("images/cloud/far-clouds.png") 305px 105px repeat-x;
}
.near-clouds {
  background: transparent url("images/cloud/near-clouds.png") 305px 165px repeat-x;
}
.content {
  position: relative;
  z-index: 101;
  height: 340px;
}

h1 sup {
  font-size: medium;
}