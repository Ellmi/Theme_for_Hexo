<% if(theme.internationalization){%>
<div id="lang-select-wrap">
    <label id="lang-select-label">
        <i class="icon-earth"></i>
        <span><%= __('language')%></span>
    </label>
    <select id="lang-select" data-canonical="<%= page.canonical_path%>">
        <option value="zh-cn" <% if(page.lang=== "zh-cn") { %> selected <% } %>>简体中文</option>
        <option value="en" <% if(page.lang=== "en") { %> selected <% } %>>English</option>
    </select>
</div>
<%}%>